
# ----------------------------------------------------------------
# Session and Security
# ----------------------------------------------------------------
# A 32-character long secret key for signing session cookies.
# Generate one using: openssl rand -base64 32
SESSION_SECRET="your-super-secret-key-for-session-32-chars-long"
# A secret key for signing temporary video URLs.
# Generate one using: openssl rand -base64 32
VIDEO_SIGNING_SECRET="your-super-secret-key-for-video-signing-32-chars"


# ----------------------------------------------------------------
# Nextcloud Integration
# ----------------------------------------------------------------
# The full WebDAV URL for your Nextcloud instance.
NEXTCLOUD_URL="https://your-nextcloud.com/remote.php/dav/files/yourusername"
# Your Nextcloud username.
NEXTCLOUD_USER="yourusername"
# An app-specific password generated from your Nextcloud security settings.
NEXTCLOUD_PASSWORD="your-nextcloud-app-password"


# ----------------------------------------------------------------
# bKash Payment Gateway
# ----------------------------------------------------------------
# Enable or disable the bKash payment option for clients.
# Set to "true" to enable.
NEXT_PUBLIC_BKASH_ENABLED="true"
# Your bKash App Key.
BKASH_APP_KEY="your-bkash-app-key"
# Your bKash App Secret.
BKASH_APP_SECRET="your-bkash-app-secret"
# Your bKash Username.
BKASH_USERNAME="your-bkash-username"
# Your bKash Password.
BKASH_PASSWORD="your-bkash-password"
# Set to "sandbox" for testing or "production" for live payments.
BKASH_MODE="sandbox"


# ----------------------------------------------------------------
# PipraPay Payment Gateway
# ----------------------------------------------------------------
# Enable or disable the PipraPay payment option for clients.
# Set to "true" to enable.
NEXT_PUBLIC_PIPRAPAY_ENABLED="true"
# Your PipraPay API Key.
PIPRAPAY_API_KEY="your-piprapay-api-key"
# The base URL for the PipraPay API (e.g., https://sandbox.piprapay.com or https://piprapay.com).
PIPRAPAY_BASE_URL="https://sandbox.piprapay.com"
# Your PipraPay Webhook Verification Key.
PIPRAPAY_WEBHOOK_VERIFY_KEY="your-piprapay-webhook-key"


# ----------------------------------------------------------------
# SMTP Email Service
# ----------------------------------------------------------------
# The hostname of your SMTP server.
SMTP_HOST="smtp.example.com"
# The port of your SMTP server (e.g., 587 for TLS, 465 for SSL).
SMTP_PORT="587"
# The username for your SMTP account.
SMTP_USER="user@example.com"
# The password for your SMTP account.
SMTP_PASS="your-smtp-password"


# ----------------------------------------------------------------
# SMS Gateway (Greenweb)
# ----------------------------------------------------------------
# Your API token from greenweb.com.bd.
GREENWEB_SMS_TOKEN="your-greenweb-sms-token"

# ----------------------------------------------------------------
# General Public Settings
# ----------------------------------------------------------------
# The WhatsApp contact link displayed to clients.
NEXT_PUBLIC_WHATSAPP_LINK="https://wa.me/your-number"

